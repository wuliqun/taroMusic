{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths":{
      "IMG/*":["./src/img/*"],
      "API/*":["./src/api/*"],
      "CMT/*":["./src/components/*"],
      "UTILS/*":["./utils/*"],
      "STORE/*":["./src/store/*"],
      "SLICE/*":["./src/store/slice/*"],
    }
  },
  "include": ["./src", "./types","./utils"],
  "compileOnSave": false
}
